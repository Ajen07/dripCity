generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  email     String  @unique
  kindeId   String  @unique
  firstName String?
  lastName  String?
}

model Product {
  id          String         @id @default(uuid()) @db.Uuid
  name        String
  description String?
  price       Float
  inventory   Int
  category    String
  isFeatured  Boolean
  isArchived  Boolean
  isActive    Boolean
  imageUrls   ProductImage[]
}

model ProductImage {
  id        String   @id @default(uuid()) @db.Uuid
  type      String
  productId String?  @db.Uuid
  url       String
  inUse     Boolean  @default(true)
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
}
